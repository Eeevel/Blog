<h4>Post details:</h4>
<br>

<p>
  <%= @row['content'] %>
  <br><br>
  Added at <%= @row['created_date'] %>
</p>

<br>
<h4>Comments</h4>
<br>
<% @comments.each do |comment| %>
  <p><%= comment['content'] %></p>
  <span style="font-size: 80%; color: #999999">Added at <%= comment['created_date'] %></span>
  <hr>
<% end %>


<form action="/post/<%= @row['id'] %>" method="post">
  <textarea name="content" class="form-control" rows="6"></textarea>
  <br>
  <button type="submit" class="btn btn-primary">Add comment</button>
</form>